<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#d9eaf1"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSubmitExpense"
        android:background="#9e8ef2"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Submit Expense" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff4081"
        android:text="Enter Money Spent"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_above="@+id/editTextPrice"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="To keep on track with your goals, don't forget to log your expenses as frequently as possible!"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginBottom="97dp"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/editTextComment"
        android:layout_alignStart="@+id/editTextComment" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Any Comments"
        android:textColor="#ff4081"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_above="@+id/editTextComment"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/btnSubmitExpense"
        android:layout_centerHorizontal="true" />
</RelativeLayout>