<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9eaf1"><![CDATA[
    tools:context="com.example.gedas.budgetingapp.MainActivity">

    ]]>

    <Button
        android:id="@+id/budgetFundsButton"
        android:background="#9e8ef2"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Budget Funds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/expensesButton"
        android:background="#9e8ef2"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:text="Add Expenses"
        app:layout_constraintLeft_toLeftOf="@+id/budgetFundsButton"
        app:layout_constraintRight_toRightOf="@+id/budgetFundsButton"
        app:layout_constraintTop_toBottomOf="@+id/budgetFundsButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/historyButton"
        android:background="#9e8ef2"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="History"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/expensesButton"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/expensesButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/expensesButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="#9e8ef2"
        android:text="About"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/chartButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="151dp"
        android:background="#9e8ef2"
        android:text="View Spending Chart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/expensesButton"
        app:layout_constraintRight_toRightOf="@+id/expensesButton"
        app:layout_constraintTop_toBottomOf="@+id/expensesButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
